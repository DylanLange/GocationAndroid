<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_view"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:padding="20dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_profile_image"
        android:layout_width="116dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"/>

    <TextView
        android:id="@+id/tv_profile_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:gravity="center_horizontal"
        android:textColor="@color/accent"
        android:textStyle="bold"
        android:textSize="25dp"
        tools:text="Dylan Lange"/>


    <TextView
        android:id="@+id/location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        android:gravity="center_horizontal"
        android:textColor="@color/accent"
        android:textSize="14dp"
        tools:text="Wellington, New Zealand"/>


    <TextView
        android:id="@+id/tv_profile_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="22dp"
        android:textColor="@color/accent"
        android:gravity="center_horizontal"
        android:textSize="18dp"
        tools:text="langedyla@myvuw.ac.nz"/>

    <TextView
        android:id="@+id/tv_last_seen_at"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Last seen at: WIG401"
        android:textColor="@color/accent"
        android:textSize="18dp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <com.shitij.goyal.slidebutton.SwipeButton
        android:id="@+id/alert_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="Swipe to alert"
        android:textSize="24sp"
        android:textColor="@color/md_white_1000"
        android:background="@color/primary"
        app:button_confirm_text="Release to send alert"
        app:button_post_confirm_text="Alert sent"
        app:after_confirmation_background="@color/colorPrimary"
        app:button_swipe_text="Swipe to alert"
        app:gradient_color_1="@color/accent"
        app:gradient_color_2="@color/primary"
        app:threshold="0.95"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>